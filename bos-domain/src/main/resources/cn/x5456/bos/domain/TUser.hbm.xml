<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="cn.x5456.bos.domain.TUser" table="t_user" schema="BOSdb">
        <id name="id">
            <column name="id" sql-type="int(11)"/>
        </id>
        <property name="username">
            <column name="username" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="password">
            <column name="password" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="salary">
            <column name="salary" sql-type="double" precision="-1"/>
        </property>
        <property name="birthday">
            <column name="birthday" sql-type="date"/>
        </property>
        <property name="gender">
            <column name="gender" sql-type="varchar(255)"/>
        </property>
        <property name="station">
            <column name="station" sql-type="varchar(255)"/>
        </property>
        <property name="telephone">
            <column name="telephone" sql-type="varchar(255)"/>
        </property>
        <property name="remark">
            <column name="remark" sql-type="varchar(255)"/>
        </property>
    </class>

    <query name="user.editpassword">
        update TUser set password=? where id=?
    </query>


</hibernate-mapping>